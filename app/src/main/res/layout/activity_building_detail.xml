<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_building_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="balajianoopgupta.projects.com.sjsuinteractivemap.BuildingDetailActivity">

    <TextView
        android:text="@string/building_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/buildingName"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search"
        android:id="@+id/buildingImage"
        android:contentDescription=""
        android:layout_below="@+id/buildingName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/building_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/buildingAddress"
        android:layout_below="@+id/buildingImage"
        android:layout_alignLeft="@+id/buildingName"
        android:layout_alignStart="@+id/buildingName"
        android:textAllCaps="false"
        android:textAlignment="center" />

    <TextView
        android:text="@string/travel_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/buildingDistance"
        android:layout_below="@+id/buildingAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />


    <ImageButton
        app:srcCompat="@drawable/streetview"
        android:id="@+id/streetViewButton"
        android:contentDescription="StreetViewButton"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/buildingDistance"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
